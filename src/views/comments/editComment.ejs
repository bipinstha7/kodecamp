<% include ../partials/header %>

<div class="container col-md-6 ">
  <div class="card">
    <h5 class="card-header">Edit</h5>
    <div class="card-body">
      <form action="/campgrounds/<%= campground_id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
           <textarea name="comment[text]" class="form-control"><%= comment.text %></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
      </form>
    </div>
  </div>
  
  <a href="/campgrounds/<%= campground_id %>" class="badge badge-primary">Go Back</a>

</div>
<% include ../partials/footer %>