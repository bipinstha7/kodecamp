<% include ../partials/header %>

<div class="container col-md-6 mt-4">
  <div class="card">
    <h5 class="card-header">Edit: <%= campground.name %></h5>
    <div class="card-body">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
        <div class="form-group">
          <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
        </div>
        <div class="form-group">
          <input type="number" name="campground[price]" value="<%= campground.price %>" class="form-control" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">
        </div>
        <div class="form-group">
           <textarea name="campground[description]" class="form-control"><%= campground.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
      </form>
    </div>
  </div>
  
  <a href="/campgrounds">Go Back</a>

</div>
<% include ../partials/footer %>